<% @user.errors.full_messages.each do |msg| %>
<div style="font-size:12px"><%= "*" + msg %></div>
<% end %>

<p>
<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br/>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %> <br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %> <br/>
  <%= f.label :email %>
  <%= f.text_field :email %> <br/>
  <%= f.submit %>
<% end %>
</p>